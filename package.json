{
  "name": "mvon",
  "displayName": "MV# Developer Extension",
  "description": "MV# Developer Extension",
  "version": "1.97.0",
  "publisher": "ongroup",
  "icon": "images/mvsharp_logo128.ico",
  "preview": false,
  "keywords": [
    "MVON#",
    "Pick",
    "BASIC",
    "MultiValue",
    "MVsharp",
    "MV#"
  ],
  "engines": {
    "vscode": "^1.23.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "homepage": "http://www.ongroup.com",
  "files": [
    "C:/Program files (x86)/ONGroup/MVON#/MVON#.d.ts"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "mvon",
        "path": "./Syntaxes/snippets.json"
      }
    ],
    "languages": [
      {
        "id": "mvon",
        "aliases": [
          "MVON# Basic",
          "mvon"
        ],
        "extensions": [
          ".bas",
          ".",
          ""
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == mvon",
          "command": "extension.compileProgram"
        },
        {
          "when": "resourceLangId == mvon",
          "command": "extension.compileDebug"
        },
        {
          "when": "resourceLangId == mvon",
          "command": "extension.catalogProgram"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.compileProgram",
        "title": "Compile Basic Program"
      },
      {
        "command": "extension.initialiseRestFS",
        "title": "Connect to MVON# REST FS"
      },
      {
        "command": "extension.compileDebug",
        "title": "Compile Basic Program with Debug"
      },
      {
        "command": "extension.catalogProgram",
        "title": "Catalog Basic Program"
      },
      {
        "command": "extension.mvonAdmin",
        "title": "MVON# Administrator"
      }
    ],
    "grammars": [
      {
        "language": "mvon",
        "scopeName": "source.mvon",
        "path": "./Syntaxes/mvon.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MVON configuration",
      "properties": {
        "mvon.gatewayDebug": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "When set to true the MvonGateway will write a log 'gateway.log' to C:\\Temp."
        },
        "mvon.margin": {
          "scope": "resource",
          "type": "number",
          "default": 5,
          "description": "The number of characters to use as a mergin when formatting."
        },
        "mvon.customWords": {
          "scope": "resource",
          "type": "string",
          "default": "()",
          "description": "List of custom words to highlight in a specific color. e.g. (HELLO|WORLD)"
        },
        "mvon.customWordColor": {
          "scope": "resource",
          "type": "string",
          "default": "yellow",
          "description": "The color to use when highlighting the custom words."
        },
        "mvon.customWordPath": {
          "scope": "resource",
          "type": "string",
          "description": "Path to a file that contains key value pairs for custom words"
        },
        "mvon.indent": {
          "scope": "resource",
          "type": "number",
          "default": 3,
          "description": "The number of characters to use when indenting code blocks."
        },
        "mvon.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "mvon.useCamelCase": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Use Camelcase for Intellisense keywords."
        },
        "mvon.formattingEnabled": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Set to false to disable code formatting."
        },
        "mvon.RemoteHost": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The host name of the server."
        },
        "mvon.UserName": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The user name to use to login to the server."
        },
        "mvon.encoding": {
          "scope": "resource",
          "type": "string",
          "default": "iso8859-1",
          "description": "The user name to use to login to the MVON# server."
        },
        "mvon.ignoreGotoScope": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "The linter will not highlight goto that jump into the middle of loops."
        },
        "mvon.Password": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The password to use to login to the MVON# server."
        },
        "mvon.AccountPassword": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The password to use to use for D3/mvBase Logto."
        },
        "mvon.HomePath": {
          "scope": "resource",
          "type": "string",
          "default": "c:\\u2\\ud81",
          "description": "The home path for Unidata on server. This is only required for Unidata."
        },
        "mvon.Account": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The Account Name or path on the Server."
        },
        "mvon.AccountPath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The path the Unidata Account. This is only used for Unidata."
        },
        "mvon.RemoteDebug": {
          "scope": "resource",
          "type": "boolean",
          "default": "false",
          "description": "Set to true when connecting to a Remote MVON# Host."
        },
        "mvon.additionalFiles": {
          "scope": "resource",
          "type": "array",
          "default": [],
          "description": "Additional Files that must be including in the file list."
        },
        "mvon.GatewayType": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The type of host the gateway is connecting to. QM, D3, Universe, Unidata,jBASE or mvBase."
        },
        "mvon.UseGateway": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Connect to the MV Gateway."
        },
        "mvon.RestPath": {
          "scope": "resource",
          "type": "string",
          "default": "http://localhost/mvonrest",
          "description": "The URL when connecting via the REST FileSystem"
        },
        "mvon.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    }
  },
  "activationEvents": [
    "*",
    "onLanguage:mvon",
    "onCommand:extension.compileProgram",
    "onCommand:extension.catalogProgram",
    "onCommand:extension.CompileDebug",
    "onFileSystem:RestFS",
    "onCommand:extension.initialiseRestFS"
  ],
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^6.14.6",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@types/socket.io": "^1.4.40",
    "deasync": "^0.1.15",
    "enum-values": "^1.2.1",
    "fs": "0.0.1-security",
    "iconv-lite": "^0.4.24",
    "npm": "^6.9.0",
    "socket-io": "^1.0.0",
    "socket-promise": "^1.0.1",
    "socket.io": "^2.2.0",
    "vsce": "^1.62.0"
  }
}
